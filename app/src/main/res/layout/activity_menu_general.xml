<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#673AB7">

                <TextView

                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"

                    android:focusable="false"
                    android:foreground="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="text"
                    android:text="menu_general"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtPOS"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="#FFFFFF"
                    android:foregroundTint="#4A8BC34A"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Monto POS: "
                    android:textSize="40sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtNumPV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="# Platos vendidos"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:foreground="@color/white"

                    android:foregroundTint="#348BC34A"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="LO MAS VENDIDO DEL DIA :)"
                    android:textSize="20sp" />
                />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtConsumo"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Consumo"

                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"

                    android:textSize="30sp"
                    android:gravity="center_vertical|center_horizontal"
                android:text="Cantidad" />

            </TableRow>

            <TableRow
                android:id="@+id/trPedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:textSize="30sp"
                    android:editable="false"
                    android:ems="15"
                    android:text="Realizar un Pedido" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>